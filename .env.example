# Application Configuration
APP_NAME=Video Agent API
APP_VERSION=1.0.0
DEBUG=True
ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://videoagent:changeme@localhost:5432/video_agent
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SOFT_TIME_LIMIT=600
CELERY_TASK_TIME_LIMIT=660

# Model API Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
RUNWAY_API_KEY=
STABILITY_API_KEY=

# Model Configuration
DEFAULT_LLM_MODEL=gpt-4
DEFAULT_IMAGE_MODEL=dall-e-3
DEFAULT_VIDEO_MODEL=runway-gen3

# Storage Configuration
STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=./storage
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET=
OSS_ENDPOINT=

# File Configuration
MAX_UPLOAD_SIZE=104857600
ALLOWED_VIDEO_FORMATS=mp4,webm,mov
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# FFmpeg Configuration
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe
OUTPUT_VIDEO_CODEC=libx264
OUTPUT_AUDIO_CODEC=aac
OUTPUT_VIDEO_BITRATE=5M
OUTPUT_AUDIO_BITRATE=192k
OUTPUT_FPS=30
OUTPUT_RESOLUTION=1920:1080

# Task Configuration
MAX_RETRY_TIMES=3
TASK_TIMEOUT=1800
MAX_CONCURRENT_TASKS_PER_USER=5
MAX_CONCURRENT_GENERATIONS=5

# Cost Control
COST_CURRENCY=USD
DEFAULT_DAILY_BUDGET=50.0

# Webhook Configuration
WEBHOOK_TIMEOUT=10
WEBHOOK_MAX_RETRIES=3

# Log Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Monitor Configuration
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
