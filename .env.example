# ============================================================
# Arya Video Agent - Environment Variables Template
# ============================================================
#
# 复制此文件为 .env 并填写所有必要的配置项
# cp .env.example .env
#
# 注意：.env 文件包含敏感信息，请勿将其提交到Git仓库
#
# ============================================================

# ============================================================
# Application Configuration
# ============================================================
APP_NAME=Arya Video Agent
APP_VERSION=1.0.0
ENV=production
DEBUG=False
HOST=0.0.0.0
PORT=8000

# ============================================================
# Logging Configuration
# ============================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# ============================================================
# Database Configuration
# ============================================================
# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_DB=arya_video_agent

# Database URL (automatically configured from above)
# DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/arya_video_agent

# Database Pool Configuration
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=10
DATABASE_POOL_RECYCLE=3600

# ============================================================
# Redis Configuration
# ============================================================
# Redis Configuration
REDIS_PASSWORD=
REDIS_DB=0

# Redis Pool Configuration
REDIS_POOL_SIZE=50
REDIS_TIMEOUT=5
REDIS_HEALTH_CHECK_INTERVAL=30

# Redis Performance Configuration
REDIS_DECODE_RESPONSES=true

# ============================================================
# OpenAI Configuration
# ============================================================
# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_TOP_P=1.0
OPENAI_FREQUENCY_PENALTY=0.0
OPENAI_PRESENCE_PENALTY=0.0
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3

# ============================================================
# Anthropic Configuration
# ============================================================
# Anthropic API Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_TOP_P=1.0
ANTHROPIC_TOP_K=0
ANTHROPIC_TIMEOUT=60
ANTHROPIC_MAX_RETRIES=3

# ============================================================
# Storage Configuration
# ============================================================
# Storage Provider (local, s3, azure, gcp)
STORAGE_PROVIDER=local
STORAGE_PATH=/app/storage

# AWS S3 Configuration (if STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1
STORAGE_URL_TTL=3600

# Azure Configuration (if STORAGE_PROVIDER=azure)
AZURE_STORAGE_ACCOUNT=your-azure-storage-account
AZURE_STORAGE_KEY=your-azure-storage-key
AZURE_CONTAINER=your-container-name

# GCP Configuration (if STORAGE_PROVIDER=gcp)
GCP_PROJECT_ID=your-gcp-project-id
GCP_CREDENTIALS_PATH=/path/to/credentials.json
GCP_BUCKET_NAME=your-bucket-name

# ============================================================
# Video Processing Configuration
# ============================================================
# FFmpeg Configuration
VIDEO_FFMPEG_PATH=/usr/bin/ffmpeg

# Video Default Configuration
VIDEO_DEFAULT_DURATION=60
VIDEO_DEFAULT_RESOLUTION=1920x1080
VIDEO_DEFAULT_FORMAT=mp4
VIDEO_DEFAULT_CODEC=libx264
VIDEO_DEFAULT_BITRATE=5000k
VIDEO_DEFAULT_FRAMERATE=30
VIDEO_DEFAULT_ASPECT_RATIO=16:9

# Video Encoding Configuration
VIDEO_ENCODING_PRESET=medium
VIDEO_ENCODING_CRF=23
VIDEO_ENCODING_PRESET=ultrafast
VIDEO_ENCODING_PRESET=superfast

# ============================================================
# Monitoring Configuration
# ============================================================
# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_URL=http://prometheus:9090

# Grafana Configuration
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Metrics Configuration
METRICS_ENABLED=true

# ============================================================
# Security Configuration
# ============================================================
# Secret Key for JWT (minimum 32 characters)
SECRET_KEY=your-secret-key-change-this-in-production-minimum-32-characters

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=https://your-domain.com
CORS_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
CORS_EXPOSE_HEADERS=Content-Length,X-Process-Time
CORS_MAX_AGE=86400

# ============================================================
# Rate Limiting Configuration
# ============================================================
# Global Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=240
RATE_LIMIT_PER_HOUR=10000
RATE_LIMIT_PER_DAY=50000

# ============================================================
# Worker Configuration
# ============================================================
# Worker Configuration
WORKER_ENABLED=true
WORKER_CONCURRENCY=4
WORKER_PREFETCH_MULTIPLIER=4
WORKER_TASK_ACK_LATE=true
WORKER_TASK_TIME_LIMIT=3600

# ============================================================
# Proxy Configuration
# ============================================================
# HTTP Proxy Configuration
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# ============================================================
# Feature Flags
# ============================================================
# Feature Flags
FEATURE_WEBSOCKET_ENABLED=true
FEATURE_REALTIME_UPDATES=true
FEATURE_BATCH_TASK_CREATION=true
FEATURE_ADVANCED_VIDEO_EDITING=false
FEATURE_TEMPLATE_VIDEO_GENERATION=false

# ============================================================
# Third-Party Integrations
# ============================================================
# ElevenLabs Configuration (optional)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_MODEL=eleven_multilingual_v2
ELEVENLABS_VOICE=Adam

# Replicate Configuration (optional)
REPLICATE_API_KEY=your-replicate-api-key
REPLICATE_MODEL=replicate_v1.5

# Speechify Configuration (optional)
SPEECHIFY_API_KEY=your-speechify-api-key
SPEECHIFY_VOICE=brian

# ============================================================
# Development/Testing Configuration
# ============================================================
# Testing Configuration
TESTING=false
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/arya_video_agent_test
TEST_REDIS_URL=redis://:6379/0

# Mock Services (for testing)
MOCK_OPENAI=false
MOCK_ANTHROPIC=false
MOCK_STORAGE=false

# ============================================================
# Advanced Configuration
# ============================================================
# Advanced Configuration
ASYNCIO_LOG_LEVEL=WARNING
SQLALCHEMY_ECHO=false
SQLALCHEMY_ECHO_POOL=false
PYTHONHASHSEEDRANDOM=0
ALLOWED_HOSTS=*
